{
  "require": {
    "php": "^8.3",
    "slim/slim": "4.*",
    "slim/psr7": "^1.7",
    "php-di/slim-bridge": "^3.4",
    "middlewares/whoops": "^2.1",
    "slim/twig-view": "^3.4",
    "middlewares/trailing-slash": "^2.1",
    "odan/session": "^6.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^4.0",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12.4"
  },
  "scripts": {
    "phpcs": "phpcs --standard=phpcs.xml config public src",
    "phpstan": "phpstan analyse config public src",
    "all": [
      "@phpcs",
      "@phpstan"
    ]
  }
}
