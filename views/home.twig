{% extends 'templates/app.twig' %}
{% block title %}{{ __t('Home') }}{% endblock %}
{% block head %}{% endblock %}
{% block script %}
    <script>
        function openImage(day) {
            const dayString = day < 10 ? '0' + day : day;
            const wrapElement = document.getElementById(`wrap-day-${day}`);
            const imgElement = document.getElementById(`img-day-${day}`);
            const btnElement = document.getElementById(`btn-day-${day}`);
            imgElement.src = `/image/${dayString}`;
            wrapElement.classList.remove('invisible');
            btnElement.classList.add('d-none');
        }

        function modalImage(day) {
            const dayString = day < 10 ? '0' + day : day;
            const imgElement = document.getElementById(`modal-image`);
            const headerElement = document.getElementById(`modalHeader`);
            imgElement.src = `/image/${dayString}`;
            headerElement.innerHTML = `{{ __t('Day') }} ${day}`;
        }
    </script>
{% endblock %}
{% block content %}
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="modalHeader" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modalHeader">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="modal-image" src="" alt="">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ __t('Close') }}</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Content -->
    <div class="container text-center">
        {% for row in 1..8 %}
            <div class="row mb-3">
            {% for col in 1..3 %}
                {% set day = ((row-1)*3)+col %}
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body" style="height: 15rem;">
                            <h5 class="card-title">{{ __t('Day')}} {{ day }}</h5>
                            {% if data[day]['isReleased'] %}
                                <button id="btn-day-{{ day }}" class="btn btn-success mt-5" onclick="openImage({{ day }})">{{ __t('Open') }}</button>
                                <div id="wrap-day-{{ day }}" class="invisible">
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="modalImage({{ day }})">
                                        <img id="img-day-{{ day }}" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNk+M9QDwADhgGAWjR9awAAAABJRU5ErkJggg==" alt="" style="width: 100%;">
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
