<!DOCTYPE html>
<html lang="de">
<head>
    <title>{{ __t(title) }} - {{ __t(block('title')) }}</title>
    <link href="/meta/bootstrap/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="/meta/bootstrap-icons/bootstrap-icons.min.css" rel="stylesheet" crossorigin="anonymous">
    <meta charset="UTF-8">
    <link rel="apple-touch-icon" sizes="180x180" href="/meta/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/meta/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/meta/favicon/favicon-16x16.png">
    <link rel="manifest" href="/meta/favicon/site.webmanifest">
    {{ block('head') }}
</head>
<body style="overflow-y: scroll">
<nav class="navbar navbar-expand bg-body-tertiary z-2">
    <div class="container-fluid">
        <div class="navbar-brand">
            <img src="/meta/favicon/favicon-32x32.png" class="me-2" alt="" />
            <a class="navbar-brand" href="#">{{ __t(title) }}</a>
        </div>
        <div class="d-flex">
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown dropstart">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-translate" title="{{ __t('Select Language') }}"></i>
                        </a>
                        <ul class="dropdown-menu">
                            {% for lang in languages %}
                            <li><a class="dropdown-item text-center" href="/language/{{ lang }}"><img src="/meta/flag-icons/{{ lang }}.svg" style="width: 1em;" /></a></li>
                            {% endfor %}
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>
<main class="container">
    <div class="pt-2">
        {% for message in flash.get('error') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        {{ block('content') }}
    </div>
</main>
<script src="/meta/bootstrap/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
{{ block('script') }}
</body>
</html>
